@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">User Login</h3>

                    <form method="post">
                        <div class="mb-3">
                            <label for="ccno" class="form-label">CCno (Username)</label>
                            <input type="text" class="form-control" id="ccno" name="ccno" required />
                        </div>

                        <div class="mb-3">
                            <label for="refPassword" class="form-label">REF (Password)</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="refPassword" name="refPassword" required />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">👁</button>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>

                    <p class="text-muted text-center mt-4" style="font-size: 0.85rem;">
                        &copy; @DateTime.Now.Year - Secure Portal
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const pwd = document.getElementById('refPassword');
            pwd.type = pwd.type === 'password' ? 'text' : 'password';
        }
    </script>
}
